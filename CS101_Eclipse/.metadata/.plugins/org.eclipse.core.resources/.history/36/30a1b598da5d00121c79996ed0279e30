public class CountAppearances {
     public int numberTimesAppear(int number, int digit) {
            String strnum = Integer.toString(number);
            int appearances = 0;
            for(int i = 0;i<strnum.length();i++){
            	if(strnum.charAt(i)==digit){
            		appearances ++;
            	}
            }
            return appearances;
     }
}